{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",
    "rootDir": "./src", 
    "outDir": "./dist",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "lib": ["es6"],
  "ts-node": {
    "esm": true
  }
}